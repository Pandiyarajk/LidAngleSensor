{
  "isort": {
    "profile": "black",
    "multi_line_output": 3,
    "line_length": 88,
    "include_trailing_comma": true,
    "force_grid_wrap": 0,
    "use_parentheses": true,
    "ensure_newline_before_comments": true,
    "skip_glob": [
      "**/migrations/**",
      "**/node_modules/**",
      "**/.git/**",
      "**/__pycache__/**"
    ]
  },
  "black": {
    "line_length": 88,
    "target_version": ["py38", "py39", "py310", "py311"],
    "include": "\\.pyi?$",
    "exclude": "/(\n    migrations\n  | node_modules\n  | \\.git\n  | __pycache__\n)/"
  },
  "git": {
    "auto_commit": true,
    "commit_message_template": "Auto-format: Fix isort and black issues in {file_count} files",
    "require_clean_working_directory": true
  },
  "webhook": {
    "enabled": true,
    "check_on_startup": true,
    "fix_on_failure": true,
    "log_level": "INFO"
  }
}